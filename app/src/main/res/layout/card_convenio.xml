<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnLinear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/card"
    android:elevation="0dp"
    android:orientation="horizontal"
    android:padding="13dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.0009"
        android:elevation="1dp"
        app:srcCompat="@drawable/ic_heart_checkup" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:layout_weight="0.003"
        android:background="@drawable/card"
        android:elevation="0dp"
        android:orientation="vertical"
        android:padding="13dp">


        <TextView
            android:id="@+id/lbl_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Convenio"
            android:textColor="@color/colorTexto"
            android:textSize="22dp"
            android:textStyle="bold|italic" />

        <!--android:shadowColor="@color/colorBackground"
            android:shadowDx="8"
            android:shadowDy="8"
            android:shadowRadius="8"-->


        <TextView
            android:id="@+id/lbl_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Numero"
            android:textSize="18dp"
            android:textColor="@color/colorTexto" />


        <CheckBox
            android:id="@+id/lbl_ativo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ativo"
            android:textAlignment="viewStart"
            android:textColor="@color/colorTexto"
            android:textSize="20dp"/>

    </LinearLayout>
</LinearLayout>